{
  "presets": [
    ["@babel/preset-env", {
      "modules": false
    }],
    "@babel/preset-react"
  ],
  "plugins": [
    ["module-resolver",
      {
        "extensions": [
          ".js",
          ".jsx"
        ],
        "root": [
          "./src"
        ]
      }
    ],
    "babel-plugin-styled-components",
    ["prismjs", {
      "languages": ["javascript", "html", "css", "jsx"],
      "plugins": ["line-numbers"],
      "theme": "coy",
      "css": true
  }]
  ],
  "env": {
    "test": {
      "plugins": [
        ["@babel/plugin-transform-modules-commonjs", {}],
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}
